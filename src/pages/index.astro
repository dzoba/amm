---
import Base from '../layouts/Base.astro';
---

<Base title="A Mental Model">
  <section class="home container">
    <p class="home__question">What do you do when you don't know what to do?</p>
    <a href="/essay" class="home__link">Read the essay</a>
  </section>
</Base>

<style>
  .home {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    text-align: center;
    padding: 4rem 1.5rem;
  }

  .home__question {
    font-family: var(--font-body);
    font-size: 1.5rem;
    font-style: italic;
    color: var(--color-text);
    max-width: 460px;
    line-height: 1.6;
    margin-bottom: 1.75rem;
  }

  .home__honest {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: var(--color-text-light);
    margin-bottom: 0.5rem;
  }

  .home__turn {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: var(--color-text-light);
    max-width: 400px;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .home__link {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid var(--color-accent-light);
    padding-bottom: 2px;
    transition: border-color 0.2s ease;
  }

  .home__link:hover {
    border-bottom-color: var(--color-accent-dark);
  }
</style>
